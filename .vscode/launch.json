{
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            // "program": "${workspaceFolder}/maincourse/fractol/fractol",
            // "program": "${workspaceFolder}/a.out",
            // "program": "${workspaceFolder}/playground/a.out",
            // "program": "${workspaceFolder}/playground/42course/MLX42_testing/fractol",
            // "program": "/Users/hezhukov/Desktop/04-Fractol/fractol",
            "program": "${workspaceFolder}/maincourse/minishell_february/minishell",
            // "program": "${workspaceFolder}/maincourse/pipex/pipex_bonus",
            "args": ["ls", "|", "sort"],
            // "args": ["infile", "cat -e", "sort -r", "oufile"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set follow-fork-mode child",
                    "text": "-gdb-set follow-fork-mode child",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
    ],
}

