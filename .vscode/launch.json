{
    "configurations": [

        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            // "program": "/home/device/Documents/programming/42/maincourse/CPP/playground_cpp/materia/a.out",
            "program": "/home/device/Documents/programming/playground/ft_irc-eguefif/ircserv",
            "args": ["2000", "pass"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set follow-fork-mode child",
                    "text": "-gdb-set follow-fork-mode child",
                    "ignoreFailures": true
                },
                {
                    "description": "Set follow-fork-mode parent",
                    "text": "-gdb-set follow-fork-mode parent",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Disable detach-on-fork",
                    "text": "set detach-on-fork off",
                    "ignoreFailures": false
                }

            ]
        },
    ],
}

