{
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            // "program": "${workspaceRoot}/maincourse/philosophers/philo",
            "program": "${workspaceRoot}/playground/42course/philosophers/a.out",
            // "args": ["2", "300", "200", "100"],
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set follow-fork-mode child",
                    "text": "-gdb-set follow-fork-mode child",
                    "ignoreFailures": true
                },
                {
                    "description": "Set follow-fork-mode parent",
                    "text": "-gdb-set follow-fork-mode parent",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Disable detach-on-fork",
                    "text": "set detach-on-fork off",
                    "ignoreFailures": false
                }

            ]
        },
    ],
}

